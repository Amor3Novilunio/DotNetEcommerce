@{
    ViewData["Title"] = "Categories";
}

@model List<Category>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Categories</h2>
        </div>
        <div class="col-6">
            <a class="float-end p-2 bg-primary rounded-1 text-white text-decoration-none" asp-controller="Categories" asp-action="Create">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Create New Categories
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="table-layout: fixed;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(o => o.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td class="d-flex justify-content-around">
                    <a class="btn btn-primary text-decoration-none form-control mx-2" asp-controller="Categories"
                        asp-action="Update" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square mx-1"></i>
                        Edit
                    </a>
                    <a class="btn btn-danger text-decoration-none form-control mx-2" asp-controller="Categories"
                        asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash mx-1"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}